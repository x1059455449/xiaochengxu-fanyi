<scroll-view scroll-y class='container'>
  <view class='history-list'>
    <view class='title'>历史纪录</view>
    <view class='item' wx:for="{{history}}" wx:key="index" bindtap='onTapItem'
      data-query="{{item.query}}" data-langId="{{item.langIndex}}">
      <view class='query'>{{item.query}}</view>
      <view class='result'>{{item.result}}</view>
    </view>
  </view>
</scroll-view>